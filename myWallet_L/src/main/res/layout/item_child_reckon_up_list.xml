<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/text_view_payee_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/listPreferredItemHeight"
        android:layout_marginLeft="@dimen/listPreferredItemPaddingLeft"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/expandableListPreferredChildPaddingLeft"
        android:text="Payee"
        android:textAppearance="?android:attr/textAppearanceListItem"/>

    <TextView
        android:id="@+id/text_view_payee_amount"
        android:layout_width="0dp"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_marginRight="?android:attr/listPreferredItemPaddingLeft"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:paddingRight="?android:attr/expandableListPreferredChildPaddingLeft"
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceListItem"/>

</LinearLayout>